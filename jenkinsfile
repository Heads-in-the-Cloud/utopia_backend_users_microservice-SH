#!groovy
// Users API Microservice Pipeline
pipeline {
    agent any

    environment {
        commit = sh(returnStdout: true, script: "git rev-parse --short=8 HEAD").trim()

        docker_user = "seanhorner"

        org_ecr_uri = '026390315914.dkr.ecr.us-west-2.amazonaws.com'

        repo_name = 'utopia_backend_security_microservice-sh'
        scanner_home = tool "${SonarQubeScanner}";
    }

    stages {

        stage('aws_login') {
            steps {
                echo 'Getting AWS credentials to push to Org ECR...'
                sh 'aws ecr get-login-password --region us-west-2 | docker login --username AWS --password-stdin ${org_ecr_uri}'
            }
        }

//         stage('SonarQube Analysis') {
//             steps{
//                 withSonarQubeEnv(installationName: 'SonarQube') {
//                     sh "${scanner_home}/bin/sonar-scanner"
//                 }
//             }
//         }

        stage('Build') {
            steps {
                echo 'Building Docker image...'
                sh 'docker context use default'
                sh 'docker build -t ${repo_name} .'
            }
        }

        stage('Push Images') {
            steps {
                echo 'Tagging images'
                sh 'docker tag ${repo_name}:latest ${org_ecr_uri}/${repo_name}:latest'
                sh 'docker tag ${repo_name}:latest ${org_ecr_uri}/${repo_name}:${commit}'
                echo 'Pushing images'
                sh 'docker push ${org_ecr_uri}/${repo_name}:latest'
                sh 'docker push ${org_ecr_uri}/${repo_name}:${commit}'
            }
        }

        stage('Cleanup') {
            steps {
                echo 'Removing images'
                sh 'docker images rm -f ${repo_name}:latest'
                sh 'docker images rm -f ${org_ecr_uri}/${repo_name}:latest'
                sh 'docker images rm -f ${org_ecr_uri}/${repo_name}:${commit}'
            }
        }
    }
}
